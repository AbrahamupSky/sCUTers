<link rel="stylesheet" href="css/admin.css">
{{> cabeceraAdmin}}
{{> mensajes}}
{{> menuAdmin}}
<div class="container-fluid">
  <div class="row">
    <main class="main col-md-9 ms-auto mt-5 col-lg-10 px-4">

      <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-2">
        <h1 class="h2">Departamentos</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
            <small>ðŸ‘»</small>
          </div>
        </div>   
      </div>

      <form action="/admin/departamento/nuevo" method="post">
      <div class="container mt-2 p-0">
        <div class="form-row p-0">
          <div class="col-md  col-md-4 mb-3">
            <label for="nombre">Ingrese departamento</label>
            <input type="text" class="form-control mt-1" name="nombre" placeholder="Lacteos, Frutas..." required="true"> 
          </div>
          <div class="col-md  col-md-4 mb-3 d-grid gap-2">
              <button type="submit" class="btn btn-outline-primary" >Ingresar Departamento</button>
          </div>
        </div>
      </div>
      </form>

      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Nombre</th>
              <th class="text-center">Modificar</th>
              <th class="text-center">Eliminar</th>
            </tr>
          </thead>
          <tbody>
		    {{#each departamentos}}
            <tr>
              <form action="/admin/departamento/actualizar/{{iddepartamento}}" method="post">
              <td>
                  <div class="input-group input-group-sm">
                    <input type="text" name="departamento" class="form-control border-0 bg-transparent" value="{{nombre}}" required="true">
                  </div>
              </td>
              <td class="text-center"><button type="submit" class="btn btn-outline-success btn-sm p-1 border-0"><i class="fas fa-save"></i></button></td>
              </form>
              <form action="/admin/departamento/eliminar/{{iddepartamento}}" method="post">
                <td class="text-center"><button class="btn btn-outline-danger btn-sm p-1 border-0"><i class="fas fa-trash"></i></button></td>     
              </form>
            {{/each}}
          </tbody>
        </table>
      </div>

    </main>
  </div>
</div>

    